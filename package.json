    "fastify": "^3.18.0",
    "pino": "^6.11.3",
    "reflect-metadata": "^0.1.13",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@types/node": "^15.12.4",
    "@types/pino": "^6.3.8",
    "husky": "^6.0.0",
    "lint-staged": "^11.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.3.4"
  },
  "lint-staged": {
    "*.ts": "npm run format"
  }
}
