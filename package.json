    "watch:serve": "ts-node src/main.ts",
    "prebuild": "rimraf dist",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
